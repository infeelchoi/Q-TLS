{
  "name": "qtls",
  "version": "1.0.0",
  "description": "Node.js binding for Q-TLS (Quantum-Resistant Transport Security Layer)",
  "main": "qtls.js",
  "types": "qtls.d.ts",
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "node-gyp build",
    "rebuild": "node-gyp rebuild",
    "clean": "node-gyp clean",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "format": "prettier --write '*.js'"
  },
  "keywords": [
    "quantum",
    "post-quantum",
    "cryptography",
    "tls",
    "security",
    "kyber",
    "dilithium",
    "pqc",
    "nist",
    "encryption"
  ],
  "author": "QSIGN Project",
  "license": "Apache-2.0",
  "homepage": "https://github.com/QSIGN/Q-TLS",
  "repository": {
    "type": "git",
    "url": "https://github.com/QSIGN/Q-TLS.git"
  },
  "bugs": {
    "url": "https://github.com/QSIGN/Q-TLS/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "node-gyp": "^9.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "@types/node": "^18.0.0"
  },
  "binary": {
    "module_name": "qtls_native",
    "module_path": "./build/Release/",
    "host": "https://github.com/QSIGN/Q-TLS/releases/download/"
