{
  "_comment": "Keycloak Realm Configuration with Q-TLS Integration",
  "_description": "This configuration enables quantum-resistant cryptography for Keycloak authentication and identity management using QSIGN PKI infrastructure",

  "realm": "qsign",
  "displayName": "QSIGN Quantum-Resistant Realm",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>QSIGN Q-TLS Protected</span></div>",
  "enabled": true,
  "sslRequired": "all",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,

  "internationalizationEnabled": true,
  "supportedLocales": ["en", "de", "fr", "ja", "ko"],
  "defaultLocale": "en",

  "ssoSessionIdleTimeout": 3600,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,

  "accessTokenLifespan": 3600,
  "accessTokenLifespanForImplicitFlow": 900,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,

  "attributes": {
    "_comment": "Q-TLS and QSIGN specific attributes",

    "qtls.enabled": "true",
    "qtls.hybrid-mode": "true",
    "qtls.certificate-path": "/opt/keycloak/conf/certs/qtls-server-cert.pem",
    "qtls.hsm-key-uri": "pkcs11:token=keycloak;object=qtls-server-key;type=private",
    "qtls.hsm-pkcs11-lib": "/usr/lib/libCryptoki2_64.so",
    "qtls.ca-cert-path": "/opt/keycloak/conf/certs/qsign-ca-bundle.pem",
    "qtls.mutual-tls": "true",
    "qtls.fips-mode": "true",
    "qtls.verify-depth": "3",

    "qsign.root-ca": "/opt/keycloak/conf/certs/qsign-root-ca.pem",
    "qsign.intermediate-ca": "/opt/keycloak/conf/certs/qsign-intermediate-ca.pem",
    "qsign.ocsp-enabled": "true",
    "qsign.ocsp-url": "http://ocsp.qsign.local:8080",
    "qsign.crl-enabled": "true",
    "qsign.crl-url": "http://crl.qsign.local:8080/crl",

    "frontendUrl": "https://auth.qsign.local:8443",
    "adminUrl": "https://auth.qsign.local:8443",

    "userManagedAccessAllowed": true,
    "oauth2DeviceCodeLifespan": 600,
    "oauth2DevicePollingInterval": 5
  },

  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "System administrator with full access",
        "composite": true,
        "clientRole": false
      },
      {
        "name": "user",
        "description": "Standard user with basic access",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "qtls_verified",
        "description": "User authenticated via Q-TLS with valid certificate",
        "composite": false,
        "clientRole": false,
        "attributes": {
          "qtls": ["true"]
        }
      }
    ]
  },

  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@qsign.local",
      "credentials": [
        {
          "type": "password",
          "value": "changeme",
          "temporary": true
        }
      ],
      "realmRoles": ["admin"],
      "requiredActions": ["UPDATE_PASSWORD"]
    }
  ],

  "clients": [
    {
      "clientId": "qtls-api-gateway",
      "name": "Q-TLS API Gateway",
      "description": "APISIX API Gateway with Q-TLS protection",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,

      "redirectUris": [
        "https://api.qsign.local:9443/*",
        "https://api.qsign.local:9443/callback"
      ],
      "webOrigins": [
        "https://api.qsign.local:9443"
      ],

      "attributes": {
        "qtls.enabled": "true",
        "qtls.require-client-cert": "true",
        "pkce.code.challenge.method": "S256",
        "access.token.lifespan": "3600",
        "client.session.idle.timeout": "3600",
        "client.session.max.lifespan": "36000"
      },

      "protocolMappers": [
        {
          "name": "qtls-cipher",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "qtls_cipher",
            "claim.name": "qtls_cipher",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "qtls-verified",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "qtls_verified",
            "claim.name": "qtls_verified",
            "jsonType.label": "Boolean",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "vault-qtls",
      "name": "HashiCorp Vault Q-TLS",
      "description": "Vault secrets engine with Q-TLS integration",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,

      "redirectUris": [
        "https://vault.qsign.local:8200/ui/vault/auth/oidc/oidc/callback",
        "http://localhost:8250/oidc/callback"
      ],

      "attributes": {
        "qtls.enabled": "true",
        "qtls.mutual-tls": "true"
      }
    }
  ],

  "clientScopes": [
    {
      "name": "qtls",
      "description": "Q-TLS specific claims",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true",
        "consent.screen.text": "Quantum-resistant TLS information"
      },
      "protocolMappers": [
        {
          "name": "qtls-info",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "qtls_enabled",
            "claim.value": "true",
            "jsonType.label": "Boolean",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],

  "authenticationFlows": [
    {
      "alias": "qtls-browser",
      "description": "Browser authentication with Q-TLS client certificate",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "auth-cookie",
          "requirement": "ALTERNATIVE",
          "priority": 10,
          "userSetupAllowed": false,
          "autheticatorFlow": false
        },
        {
          "authenticator": "x509-client-certificate-authenticator",
          "requirement": "ALTERNATIVE",
          "priority": 20,
          "userSetupAllowed": false,
          "autheticatorFlow": false,
          "authenticatorConfig": "qtls-x509-config"
        },
        {
          "authenticator": "identity-provider-redirector",
          "requirement": "ALTERNATIVE",
          "priority": 25,
          "userSetupAllowed": false,
          "autheticatorFlow": false
        },
        {
          "requirement": "ALTERNATIVE",
          "priority": 30,
          "flowAlias": "qtls-forms",
          "userSetupAllowed": false,
          "autheticatorFlow": true
        }
      ]
    },
    {
      "alias": "qtls-forms",
      "description": "Username/password with OTP",
      "providerId": "basic-flow",
      "topLevel": false,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "auth-username-password-form",
          "requirement": "REQUIRED",
          "priority": 10,
          "userSetupAllowed": false,
          "autheticatorFlow": false
        },
        {
          "authenticator": "auth-otp-form",
          "requirement": "CONDITIONAL",
          "priority": 20,
          "userSetupAllowed": false,
          "autheticatorFlow": false
        }
      ]
    }
  ],

  "authenticatorConfig": [
    {
      "alias": "qtls-x509-config",
      "config": {
        "x509-cert-auth.mapper-selection": "Custom Attribute Mapper",
        "x509-cert-auth.mapper-selection.user-attribute-name": "qtls_cert_subject",
        "x509-cert-auth.regular-expression": "CN=(.*?)(?:,|$)",
        "x509-cert-auth.crl-checking-enabled": "true",
        "x509-cert-auth.crldp-checking-enabled": "true",
        "x509-cert-auth.ocsp-checking-enabled": "true",
        "x509-cert-auth.ocsp-responder-uri": "http://ocsp.qsign.local:8080",
        "x509-cert-auth.keyusage": "digitalSignature,keyEncipherment",
        "x509-cert-auth.extendedkeyusage": "clientAuth"
      }
    }
  ],

  "browserFlow": "qtls-browser",
  "registrationFlow": "registration",
  "directGrantFlow": "direct grant",
  "resetCredentialsFlow": "reset credentials",
  "clientAuthenticationFlow": "clients",

  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "CLIENT_LOGIN",
    "CLIENT_LOGIN_ERROR",
    "UPDATE_PASSWORD",
    "UPDATE_PASSWORD_ERROR",
    "VERIFY_EMAIL",
    "VERIFY_EMAIL_ERROR"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true,

  "smtpServer": {
    "host": "smtp.qsign.local",
    "port": "587",
    "from": "noreply@qsign.local",
    "fromDisplayName": "QSIGN Authentication",
    "ssl": "true",
    "starttls": "true",
    "auth": "true",
    "user": "keycloak",
    "password": "changeme"
  },

  "browserSecurityHeaders": {
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },

  "requiredActions": [
    {
      "alias": "CONFIGURE_TOTP",
      "name": "Configure OTP",
      "providerId": "CONFIGURE_TOTP",
      "enabled": true,
      "defaultAction": true,
      "priority": 10,
      "config": {}
    },
    {
      "alias": "UPDATE_PASSWORD",
      "name": "Update Password",
      "providerId": "UPDATE_PASSWORD",
      "enabled": true,
      "defaultAction": false,
      "priority": 30,
      "config": {}
    },
    {
      "alias": "VERIFY_EMAIL",
      "name": "Verify Email",
      "providerId": "VERIFY_EMAIL",
      "enabled": true,
      "defaultAction": false,
      "priority": 50,
      "config": {}
    }
  ],

  "passwordPolicy": "length(12) and digits(1) and lowerCase(1) and upperCase(1) and specialChars(1) and notUsername(undefined) and passwordHistory(5) and forceExpiredPasswordChange(365)",

  "otpPolicyType": "totp",
  "otpPolicyAlgorithm": "HmacSHA256",
  "otpPolicyDigits": 6,
  "otpPolicyLookAheadWindow": 1,
  "otpPolicyPeriod": 30,

  "webAuthnPolicyRpEntityName": "QSIGN",
  "webAuthnPolicySignatureAlgorithms": ["ES256", "RS256"],
  "webAuthnPolicyRpId": "qsign.local",
  "webAuthnPolicyAttestationConveyancePreference": "none",
  "webAuthnPolicyAuthenticatorAttachment": "cross-platform",
  "webAuthnPolicyRequireResidentKey": "No",
  "webAuthnPolicyUserVerificationRequirement": "preferred"
}
